<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InformationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/startBackground2">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back_white_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/information"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/endBackground2"
            android:textSize="20sp"/>



    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        style="@style/MyTabLayout"
        android:id="@+id/tl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/startBackground2"
        app:tabGravity="center"
        app:tabMaxWidth="0dp"
        app:tabIndicatorColor="@color/endBackground2"
        app:tabSelectedTextColor="@color/endBackground2"
        app:tabTextColor="@color/midBackground2"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>