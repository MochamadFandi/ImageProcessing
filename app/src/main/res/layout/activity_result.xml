<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activity.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/home"
                android:src="@drawable/ic_home_white_24dp" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/identification_results"
            android:textColor="@color/endBackground2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/source_image"
            android:textColor="@color/endBackground2"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/iv_before"
            android:layout_width="250dp"
            android:layout_height="333dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/source_image"
            android:src="@drawable/ic_camera_white_150dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="24dp"
            android:background="@color/endBackground2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/result_image"
            android:textColor="@color/endBackground2"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/iv_after"
            android:layout_width="250dp"
            android:layout_height="333dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/result_image"
            android:src="@drawable/ic_camera_white_150dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="24dp"
            android:background="@color/endBackground2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/analysis_details"
            android:textSize="18sp"
            android:textColor="@color/endBackground2"
            android:textStyle="bold"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:elevation="6dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/endBackground2"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/playfair_display"
                    android:text="@string/type_of_date_palm"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/playfair_display"
                    android:text="@string/kurma_ajwa"
                    android:textColor="@color/text2"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/playfair_display"
                    android:text="@string/glcm_feature_details"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/energy"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_energy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/energy"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/contrast"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_contrast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contrast"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/correlation"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_correlation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/correlation"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/entropy"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_entropy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/entropy"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/homogeneity"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_homogeneity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homogeneity"
                        android:textColor="@color/text2"
                        android:textSize="12sp" />

                </TableRow>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="64dp"
            android:padding="8dp"
            android:background="@drawable/bg_button"
            android:text="@string/detail_process"
            android:textColor="@color/text"
            android:textAllCaps="false"
            android:textSize="16sp"/>


    </LinearLayout>

</ScrollView>